<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.droidmentor.checkoutflow.CCFragment.CCSecureCodeFragment">

    <android.support.v7.widget.CardView
        card_view:cardCornerRadius="1dp"
        card_view:elevation="4dp"
        style="@style/CardStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/CardLabel"
                android:text="@string/card_cvv"/>

            <com.droidmentor.checkoutflow.Utils.CreditCardEditText
                style="@style/CardInput"
                android:id="@+id/et_cvv"
                android:hint="CVV/CVC"
                android:inputType="number"
                android:maxLength="3"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>
